  encode gzip zstd

  handle /api/* {
    reverse_proxy backend:3000
  }

  handle /socket.io/* {
    reverse_proxy backend:3000
  }

  handle {
    reverse_proxy admin-frontend:80
  }
}

audio.kunstradbasketball.de {
  encode gzip zstd

  handle /api/* {
    reverse_proxy backend:3000
  }

  handle /socket.io/* {
    reverse_proxy backend:3000
  }

  handle /media/* {
    reverse_proxy backend:3000
  }

  handle {
    reverse_proxy audio-frontend:80
  }
}

