{
  admin off
}

kunstradbasketball.de, www.kunstradbasketball.de {
  encode gzip zstd

  handle /api/* {
    reverse_proxy backend:3000
  }

  handle /socket.io/* {
    reverse_proxy backend:3000
  }

  handle {
    reverse_proxy public-frontend:80
  }
}

display.kunstradbasketball.de {
  encode gzip zstd

  handle /api/* {
    reverse_proxy backend:3000
  }

  handle /socket.io/* {
    reverse_proxy backend:3000
  }

  handle {
    reverse_proxy display-frontend:80
  }
}

