{
  auto_https off
  admin off
}

:80 {
  encode gzip zstd

  handle /api/* {
    reverse_proxy backend:3000
  }

  handle {
    reverse_proxy public-frontend:80
  }
}

:8081 {
  encode gzip zstd
  reverse_proxy display-frontend:80
}

:8082 {
  encode gzip zstd
  reverse_proxy admin-frontend:80
}

:3000 {
  reverse_proxy backend:3000
}
